{{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form action="#" class="contact__form">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.nomEvent, 'Nom Event'|trans, {'label_attr' : {'class': '' }}) }}
                            {{ form_widget(form.nomEvent) }}
                        </div>
                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.dateEvent, 'Date'|trans, {'label_attr' : {'class': 'control-label' }}) }}
                            {{ form_widget(form.dateEvent) }}
                        </div>

                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.descEvent, 'Description'|trans, {'label_attr' : {'class': 'control-label' }}) }}
                            {{ form_widget(form.descEvent) }}
                        </div>
                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.lieuEvent, 'Lieu'|trans, {'label_attr' : {'class': 'control-label' }}) }}
                            {{ form_widget(form.lieuEvent) }}
                        </div>
                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.imageEvent, 'Image'|trans, {'label_attr' : {'class': 'control-label' }}) }}
                            {{ form_widget(form.imageEvent) }}
                        </div>
                        <div class="col-lg-6 col-md-6">
                            {{ form_label(form.cancelEvent, 'Cancel'|trans, {'label_attr' : {'class': 'control-label' }}) }}
                            {{ form_widget(form.cancelEvent) }}
                        </div>
                    </div>
                    <button type="submit" class="site-btn">{{ button_label|default('Save') }}</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
{{ form_end(form) }}